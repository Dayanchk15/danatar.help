    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: left 0.5s var(--ease-out-cubic);
  }
  
  .contact-form .btn:hover {
    box-shadow: 0 8px 28px rgba(var(--rgb-brand-1), 0.5), 
                0 4px 12px rgba(var(--rgb-brand-5), 0.3),
                inset 0 1px 0 rgba(255, 255, 255, 0.3);
    transform: translateY(-2px);
    background: linear-gradient(135deg, var(--color-brand-5) 0%, var(--color-brand-1) 50%, rgba(var(--rgb-brand-1), 0.9) 100%);
  }
  
  .contact-form .btn:hover::before {
    left: 100%;
  }
  
  .contact-form .btn:active {
    transform: translateY(0);
    box-shadow: 0 4px 16px rgba(var(--rgb-brand-1), 0.4);
  }
  
