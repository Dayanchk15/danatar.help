    display: block;
    position: relative;
    z-index: 1;
  }
  
  .contact-form .btn > span:after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 99px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    z-index: 2;
    pointer-events: none;
  }
  
  /* Переопределяем стили для кнопки с классом u-text */
  .contact-form .btn.u-text,
  .contact-form button.btn.u-text {
    color: rgb(255, 255, 255) !important;
    font-weight: 900 !important;
  }
  
  .contact-form .btn > span {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .contact-form .btn > span > span,
  .contact-form .btn.u-text > span > span,
  .contact-form button.btn.u-text > span > span {
    color: rgb(255, 255, 255) !important;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0 !important;
    width: 100%;
    height: 100%;
    line-height: 1.25;
    background: transparent;
    font-weight: 900 !important;
    font-size: var(--font-size-lg) !important;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }
  
  .contact-form .btn > span > span:first-child,
  .contact-form .btn.u-text > span > span:first-child,
  .contact-form button.btn.u-text > span > span:first-child {
    transition: clip-path 0.3s var(--ease-out-cubic);
    color: rgb(255, 255, 255) !important;
    background: transparent;
    font-weight: 900 !important;
