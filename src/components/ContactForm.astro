    transition: background 0.2s var(--ease-out-cubic), transform 0.2s var(--ease-out-cubic), box-shadow 0.2s var(--ease-out-cubic);
    box-shadow: 0 4px 12px rgba(var(--rgb-brand-1), 0.3);
    z-index: 1001;
