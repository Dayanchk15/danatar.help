---
import { tr } from "../i18n/ssr";
---

<section id="pricing" class="py-10 sm:py-14">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <div class="max-w-2xl">
      <h2 class="text-2xl font-semibold tracking-tight" data-i18n="pricing.title">{tr("pricing.title")}</h2>
      <p class="mt-2 text-muted" data-i18n="pricing.subtitle">{tr("pricing.subtitle")}</p>
    </div>

    <div class="mt-8 grid gap-4 md:grid-cols-2">
      <div class="card rounded-3xl p-8">
        <div class="flex items-baseline justify-between gap-4">
          <h3 class="text-lg font-semibold" data-i18n="pricing.plans.free.title">{tr("pricing.plans.free.title")}</h3>
          <p class="text-sm text-muted" data-i18n="pricing.plans.free.price">{tr("pricing.plans.free.price")}</p>
        </div>
        <p class="mt-2 text-sm text-muted" data-i18n="pricing.plans.free.desc">{tr("pricing.plans.free.desc")}</p>

        <ul class="mt-5 space-y-2 text-sm">
          <li data-i18n="pricing.plans.free.features.1">{tr("pricing.plans.free.features.1")}</li>
          <li data-i18n="pricing.plans.free.features.2">{tr("pricing.plans.free.features.2")}</li>
          <li data-i18n="pricing.plans.free.features.3">{tr("pricing.plans.free.features.3")}</li>
          <li data-i18n="pricing.plans.free.features.4">{tr("pricing.plans.free.features.4")}</li>
        </ul>

        <div class="mt-6">
          <a class="btn" href="#contact" data-i18n="pricing.plans.free.cta">{tr("pricing.plans.free.cta")}</a>
        </div>
      </div>

      <div class="card rounded-3xl p-8 ring-1 ring-indigo-500/30">
        <div class="flex items-baseline justify-between gap-4">
          <h3 class="text-lg font-semibold" data-i18n="pricing.plans.premium.title">{tr("pricing.plans.premium.title")}</h3>
          <p class="text-sm text-muted" data-i18n="pricing.plans.premium.price">{tr("pricing.plans.premium.price")}</p>
        </div>
        <p class="mt-2 text-sm text-muted" data-i18n="pricing.plans.premium.desc">{tr("pricing.plans.premium.desc")}</p>

        <ul class="mt-5 space-y-2 text-sm">
          <li data-i18n="pricing.plans.premium.features.1">{tr("pricing.plans.premium.features.1")}</li>
          <li data-i18n="pricing.plans.premium.features.2">{tr("pricing.plans.premium.features.2")}</li>
          <li data-i18n="pricing.plans.premium.features.3">{tr("pricing.plans.premium.features.3")}</li>
          <li data-i18n="pricing.plans.premium.features.4">{tr("pricing.plans.premium.features.4")}</li>
        </ul>

        <div class="mt-6">
          <a class="btn btn-primary" href="#contact" data-i18n="pricing.plans.premium.cta">{tr("pricing.plans.premium.cta")}</a>
        </div>
      </div>
    </div>
  </div>
</section>

