---
import { tr } from "../i18n/ssr";
---

<footer id="contact" class="py-12">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <div class="card rounded-3xl p-8 sm:p-10">
      <div class="flex flex-col gap-6 md:flex-row md:items-center md:justify-between">
        <div class="max-w-xl">
          <h2 class="text-2xl font-semibold tracking-tight" data-i18n="contact.title">{tr("contact.title")}</h2>
          <p class="mt-2 text-muted" data-i18n="contact.subtitle">
            {tr("contact.subtitle")}
          </p>
        </div>
        <div class="flex flex-wrap gap-3">
          <a class="btn btn-primary" href="mailto:hello@danatar.dev">hello@danatar.dev</a>
          <a class="btn" href="#services" data-i18n="contact.backToServices">{tr("contact.backToServices")}</a>
        </div>
      </div>

      <div class="mt-8 flex flex-col gap-2 border-t border-slate-900/10 pt-6 text-sm text-muted sm:flex-row sm:items-center sm:justify-between">
        <p>Â© <span id="year"></span> Danatar</p>
        <p data-i18n="footer.note">{tr("footer.note")}</p>
      </div>
    </div>
  </div>

  <script>
    const el = document.getElementById("year");
    if (el) el.textContent = String(new Date().getFullYear());
  </script>
</footer>

