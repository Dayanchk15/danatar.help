---
import { tr } from "../i18n/ssr";
---

<section class="py-10 sm:py-14">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <div class="max-w-2xl">
      <h2 class="text-2xl font-semibold tracking-tight" data-i18n="features.title">{tr("features.title")}</h2>
      <p class="mt-2 text-muted" data-i18n="features.subtitle">
        {tr("features.subtitle")}
      </p>
    </div>

    <div class="mt-8 grid gap-4 md:grid-cols-3">
      <div class="card rounded-2xl p-6">
        <p class="text-sm font-semibold text-indigo-600" data-i18n="features.items.speed.kicker">{tr("features.items.speed.kicker")}</p>
        <h3 class="mt-2 text-lg font-semibold" data-i18n="features.items.speed.title">{tr("features.items.speed.title")}</h3>
        <p class="mt-2 text-sm text-muted" data-i18n="features.items.speed.body">
          {tr("features.items.speed.body")}
        </p>
      </div>
      <div class="card rounded-2xl p-6">
        <p class="text-sm font-semibold text-indigo-600" data-i18n="features.items.clarity.kicker">{tr("features.items.clarity.kicker")}</p>
        <h3 class="mt-2 text-lg font-semibold" data-i18n="features.items.clarity.title">{tr("features.items.clarity.title")}</h3>
        <p class="mt-2 text-sm text-muted" data-i18n="features.items.clarity.body">
          {tr("features.items.clarity.body")}
        </p>
      </div>
      <div class="card rounded-2xl p-6">
        <p class="text-sm font-semibold text-indigo-600" data-i18n="features.items.results.kicker">{tr("features.items.results.kicker")}</p>
        <h3 class="mt-2 text-lg font-semibold" data-i18n="features.items.results.title">{tr("features.items.results.title")}</h3>
        <p class="mt-2 text-sm text-muted" data-i18n="features.items.results.body">
          {tr("features.items.results.body")}
        </p>
      </div>
    </div>
  </div>
</section>

