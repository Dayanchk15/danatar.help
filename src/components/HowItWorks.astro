---
import { tr } from "../i18n/ssr";
---

<section id="how" class="py-10 sm:py-14">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <div class="card rounded-3xl p-8 sm:p-10">
      <div class="max-w-2xl">
        <h2 class="text-2xl font-semibold tracking-tight" data-i18n="how.title">{tr("how.title")}</h2>
        <p class="mt-2 text-muted" data-i18n="how.subtitle">{tr("how.subtitle")}</p>
      </div>

      <div class="mt-8 grid gap-6 md:grid-cols-3">
        <div>
          <div class="pill w-fit text-sm" aria-hidden="true">01</div>
          <h3 class="mt-3 text-lg font-semibold" data-i18n="how.steps.1.title">{tr("how.steps.1.title")}</h3>
          <p class="mt-2 text-sm text-muted" data-i18n="how.steps.1.body">
            {tr("how.steps.1.body")}
          </p>
        </div>
        <div>
          <div class="pill w-fit text-sm" aria-hidden="true">02</div>
          <h3 class="mt-3 text-lg font-semibold" data-i18n="how.steps.2.title">{tr("how.steps.2.title")}</h3>
          <p class="mt-2 text-sm text-muted" data-i18n="how.steps.2.body">
            {tr("how.steps.2.body")}
          </p>
        </div>
        <div>
          <div class="pill w-fit text-sm" aria-hidden="true">03</div>
          <h3 class="mt-3 text-lg font-semibold" data-i18n="how.steps.3.title">{tr("how.steps.3.title")}</h3>
          <p class="mt-2 text-sm text-muted" data-i18n="how.steps.3.body">
            {tr("how.steps.3.body")}
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

