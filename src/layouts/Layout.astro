---
import { Font } from "astro:assets";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SmoothScroll from "../components/SmoothScroll.astro";
import { buildLangPath, getLangFromUrl, useTranslations } from "../i18n/utils";
import { languages } from "../i18n/ui";
import "../styles/global.css";

const { title } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const links = [
  { title: t("nav.home"), url: `/${lang}/` },
  { title: t("nav.about"), url: "#about" },
  { title: t("nav.contact"), url: "#contact" },
  { title: t("nav.book"), url: "#", dataAction: "open-calendar" },
];

const langLinks = Object.entries(languages).map(([code, label]) => ({
  code,
  label,
  url: buildLangPath(Astro.url, code as keyof typeof languages),
}));
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
    <!-- Preconnect to external resources for faster loading -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://app.cal.com" />
    
    <!-- DNS prefetch for external resources -->
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://fonts.gstatic.com" />
    <link rel="dns-prefetch" href="https://app.cal.com" />
    
    <!-- Optimize font loading -->
    <Font cssVariable="--font-roboto-slab" preload />
    <Font cssVariable="--font-inter" preload />
    
    <title>{title}</title>
  </head>
  <body>
    <a href="#main" class="skip-link">{t("accessibility.skip-to-content")}</a>
    <Header
      client:load
      logoUrl={`/${lang}/`}
      logoAlt="Danny"
      links={links}
      currentLang={lang}
      langLinks={langLinks}
      langLabel={t("nav.language")}
    />
    <main id="main">
      <slot />
    </main>
    <Footer client:visible logoUrl={`/${lang}/`} logoAlt="Danny" links={links} />
    <SmoothScroll client:load />
  </body>
</html>

<style>
  .skip-link {
    background: var(--color-brand-1);
    left: 0;
    right: 0;
    margin: auto;
    width: min-content;
    white-space: nowrap;
    padding: 0.5rem;
    position: absolute;
    transform: translateY(-100%);
    transition: transform 0.3s ease;
    z-index: 100;
  }

  .skip-link:focus {
    transform: translateY(0%);
  }
</style>

<script>
  // Оптимизация: загружаем скрипты после полной загрузки страницы
  (function() {
    // Ждем полной загрузки страницы перед загрузкой некритичных скриптов
    if (document.readyState === 'complete') {
      loadScripts();
    } else {
      window.addEventListener('load', loadScripts, { once: true });
    }
    
    function loadScripts() {
      // Используем requestIdleCallback для загрузки некритичных скриптов
      // когда браузер свободен
      if ('requestIdleCallback' in window) {
        requestIdleCallback(() => {
          Promise.all([
            import("../utils/reveals"),
            import("../utils/i18nClient")
          ]).catch(console.error);
        }, { timeout: 2000 });
      } else {
        // Fallback для браузеров без requestIdleCallback
        setTimeout(() => {
          Promise.all([
            import("../utils/reveals"),
            import("../utils/i18nClient")
          ]).catch(console.error);
        }, 100);
      }
    }
  })();
</script>
